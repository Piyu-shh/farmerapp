<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".registration">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="555dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"

        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Registration"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username_box"
        android:layout_width="542dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="25dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/phone_box"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"

        android:background="#50ffffff"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/address_box"
        android:inputType="textPostalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"

        android:background="#50ffffff"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="10dp"
        android:hint="Address"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/password_box"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"

        android:background="#50ffffff"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="24dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="25sp"
        android:drawablePadding="10sp"
        android:padding="5sp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/i_agree_with_terms_and_conditions" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="16dp"/> <!-- Adjust the radius for rounded corners -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="344dp"
        android:layout_height="111dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="128dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="128dp"
        android:background="#008080"
        android:text="Sign Up!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp" />




    </RelativeLayout>